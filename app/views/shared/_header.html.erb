<div class="bg-white flex justify-between items-center px-2" data-controller="menu">
  <h1 class="text-3xl">
    <span class="hidden sm:block ">
    <%= t('app_name') %>
    </span>
    <span class="sm:hidden">
      <%= t('app_name_short')%>
    </span>
  </h1>
  <button class="sm:hidden" data-action="click->menu#open">
    <%= image_tag 'menu.svg', width: 35, height: 35 %>
    </button>
  <!-- Menu mobile -->
  <div class="gap-4 sm:hidden absolute bg-white top-0 right-0 shadow z-10 h-full flex flex-col min-w-[45%] overflow-y-scroll ease-in-out duration-200 p-5 translate-x-full" data-menu-target="items">
    <button data-action="click->menu#close">
    <%= image_tag 'close.svg', width: 35, height: 35 %>
    </button>
    <%= render partial: 'shared/items' %>
  </div>
  <!-- Menu tablet - desktop -->
  <div class="hidden sm:block"> 
    <%= render partial: 'shared/items' %>
  </div>
</div>