  <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
    <div class="w-full bg-white rounded-lg shadow md:mt-0 sm:max-w-md xl:p-0">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl">
          <%= t('.sign_in_to') %>
        </h1>
        <%= form_with(url: sessions_path, class: "space-y-4 md:space-y-6") do |f| %>
          <div>
            <%= f.label :login, class:"block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.text_field :login, required: true, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <div>
            <%= f.label :password, class:"block mb-2 text-sm font-medium text-gray-900" %>
            <%= f.password_field :password, required: true, class:"bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5" %>
          </div>
          <%= f.submit t('.sign_up'), class:" hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        <% end %>
      </div>
    </div>
  </div>
