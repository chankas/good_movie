<%= link_to movie_path(movie), class: 'movie bg-white mb-2 rounded sm:w-[calc(50%_-_.5rem)] lg:w-[calc(33.3333%_-_.5rem)] p-2', 'data-turbo-frame': '_top' do %>

  <h2 class="font-bold text-xl"><%= movie.title %></h2>
  <span><%= movie.original_title %></span>
  <p><%= image_tag movie.poster_path.blank? ? 'Image-not-found.png': movie.poster_path, class: "w-auto h-400  object-cover" %></p>

  <p class="text-gray-500 text-sm mt-2"><%= movie.overview %></p>
  <p><%= movie.vote_average %></p>

  <p><% movie.categories.each do |category| %>
      <%= category.name %> 
    <% end %>
  </p>
<% end %>