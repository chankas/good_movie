<%= turbo_frame_tag "home" do %>
  <%= link_to t('.all'), movies_path %>
  <%= render partial: 'category', collection: @categories %>
  <%= render partial: 'filters' %>
  <%= turbo_frame_tag 'movies' do %>
    <%= turbo_frame_tag "movies-#{@pagy.page}" do %>
      <%= render partial: 'movie', collection: @movies %>
      <%=  t('.page', page: @pagy.next) %>
      <%= turbo_frame_tag "movies-#{@pagy.next}", src: pagy_url_for(@pagy, @pagy.next), loading: :lazy if @pagy.next %>
    <% end %>
  <% end %>
<% end %>



