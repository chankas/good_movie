<%= form_with url: movies_path, method: :get do |form| %>
  <%= form.text_field :query_text, value: params[:query_text], placeholder: t('.query_text'), onChange: 'this.form.requestSubmit()' %>
  <%= form.number_field :min_year, value: params[:min_year], placeholder: t('.min_year'), onChange: 'this.form.requestSubmit()' %>
  <%= form.number_field :max_year, value: params[:max_year], placeholder: t('.max_year'), onChange: 'this.form.requestSubmit()' %>
  <%= form.select :order_by, options_for_select([[t('.newest'), 'newest'], [t('.oldest'), 'oldest'],[t('.best_vote_average'), 'best_vote_average'], [t('.worst_vote_average'), 'worst_vote_average']], params[:order_by]), {}, onChange:'this.form.requestSubmit()' %>
<% end %>